@{
    ViewBag.Title = "Quản lý sản phẩm";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form để nhập đầu vào tìm kiếm -->
        <form id="formSearch" action="/Product" method="get">
            <div class="row">
                <div class="col-sm-3">
                    <label>Loại hàng:</label>
                    <select class="form-control" name="CategoryID">
                        <option value="">-- Chọn loại hàng --</option>
                        <option value="1">May mặc - Thời trang</option>
                        <option value="2">Mỹ phẩm</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <label>Nhà cung cấp:</label>
                    <select class="form-control" name="SupplierID">
                        <option value="">-- Chọn nhà cung cấp --</option>
                        <option value="1">Công ty Xuất nhập khẩu Thành Hưng</option>
                        <option value="2">Công ty TNHH Sao Mai Việt</option>
                    </select>
                </div>
                <div class="col-sm-1">
                    <label>Giá từ:</label>
                    <input type="text" class="form-control" name="MinPrice" value="0">
                </div>
                <div class="col-sm-1">
                    <label>đến:</label>
                    <input type="text" class="form-control" name="MaxPrice" value="1000000000">
                </div>
                <div class="col-sm-4">
                    <label>Tên mặt hàng cần tìm:</label>
                    <div class="input-group">
                        <input name="SearchValue" type="text" class="form-control" placeholder="Nhập mặt hàng hàng cần tìm" autofocus>
                        <div class="input-group-btn">
                            <button class="btn btn-info" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                            <a href="/Product/Create" class="btn btn-primary" style="margin-left:5px">
                                <i class="fa fa-plus"></i> Bổ sung
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- Hiển thị dữ liệu -->
        <p style="margin-top:10px">
            Có <strong>100</strong> sản phẩm trong tổng số <strong>10</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th style="width:100px">Ảnh</th>
                        <th style="width:auto">Tên mặt hàng</th>
                        <th style="width:100px">Đơn vị tính</th>
                        <th>Giá</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <tr>
                            <td>
                                <img id="Photo" src="~/images/products/macbook.jpg" class="img img-bordered" style="width:80px" />
                            </td>
                            <td>Laptop Apple MacBook Air 13 inch M1 8GB/256GB (MGN63SA/A)</td>
                            <td>Cái</td>
                            <td>20,000,000</td>
                            <td class="text-right">
                                <a href="~/Product/Edit/123" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Product/Delete/123" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
        
</div>
