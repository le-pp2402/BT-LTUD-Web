@model Category
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            <div class="form-group">
                <label class="form-label">Tên loại hàng: </label>
                <input type="text" name="@nameof(Model.CategoryName)" value = "@Model.CategoryName" class="form-control" autofocus/>
                @Html.ValidationMessage(nameof(Model.CategoryName))
            </div>

            <div class="form-group">
                <label class="form-label"> Mô tả: </label>
                <input type="text" name="@nameof(Model.Description)" value ="@Model.Description" class="form-control" />
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
