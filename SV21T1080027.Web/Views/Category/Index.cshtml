@model CategorySearchResult
@{
    ViewBag.Title = "Danh sách loại hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form để nhập đầu vào tìm kiếm -->
        <form id="formSearch" action="~/Category" method="get">
            <div class="input-group">

                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập loại hàng cần tìm"
                       value="@Model.SearchValue"
                       autofocus />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Category/Create/" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>

            </div>
        </form>
        <!-- Hiển thị dữ liệu -->
        <p style="margin-top:10px">
            Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên loại hàng</th>
                        <th>Mô tả</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var elem in Model.Data)
                    {
                        <tr>
                            <td>@elem.CategoryName</td>
                            <td>@elem.Description</td>
                            <td class="text-right">
                                <a href="~/Category/Edit/@elem.CategoryID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Category/Delete/@elem.CategoryID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (p == Model.Page)
                        {
                            <li class="page-item active"><a class="page-link" href="~/Category?page=@p&searchValue=@Model.SearchValue"> @p </a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="~/Category?page=@p&searchValue=@Model.SearchValue"> @p </a></li>
                        }
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

