@{
    ViewBag.Title = "Xoá loại hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <div class="form-group">
                <label class="form-label">Tên loại hàng: </label>
                <p class="form-control-static"> May mặc - thời trang </p>
            </div>

            <div class="form-group">
                <label class="form-label"> Mô tả: </label>
                <p class="form-control-static"> Quần áo, hàng may mặc, thời trang,... </p>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-floppy-o"></i>
                    Xác nhận xoá
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>



