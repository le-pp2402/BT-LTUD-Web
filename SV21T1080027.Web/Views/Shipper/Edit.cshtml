@model Shipper
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label class="form-label">Tên đơn vị giao hàng: </label>
                <input type="text" name="@nameof(Model.ShipperName)" value ="@Model.ShipperName" class=" form-control" autofocus />
            </div>

            <div class="form-group">
                <label class="form-label"> Số điện thoại: </label>
                <input type="text" name="@nameof(Model.Phone)" value ="@Model.Phone" class="form-control" />
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
