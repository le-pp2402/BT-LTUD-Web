@model IEnumerable<Supplier>
@{
    ViewBag.Title = "Quản lý nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form để nhập đầu vào tìm kiếm -->
        <form id="formSearch" action="~/Supplier" method="get">
            <div class="input-group">

                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên nhà cung cấp cần tìm"
                       value = "@ViewBag.SearchValue"
                       autofocus />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Supplier/Create/" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>

            </div>
        </form>
        <!-- Hiển thị dữ liệu -->
        <p style="margin-top:10px">
            Có <strong>@ViewBag.RowCount</strong> nhà cung cấp trong tổng số <strong>@ViewBag.PageCount</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên nhà cung cấp</th>
                        <th>Tên liên lạc</th>
                        <th>Tỉnh/TP</th>
                        <th>Địa chỉ</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var elem in Model)
                    {
                        <tr>
                            <td>@elem.SupplierName </td>
                            <td>@elem.ContactName</td>
                            <td>@elem.Province</td>
                            <td>@elem.Address</td>
                            <td>@elem.Phone </td>
                            <td>@elem.Email </td>
                            <td class="text-right">
                                <a href="~/Supplier/Edit/@elem.SupplierID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Supplier/Delete/@elem.SupplierID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="text-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.page)
                    {
                        <li class="page-item active"><a class="page-link" href="~/Supplier?page=@p&searchValue=@ViewBag.SearchValue"> @p </a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="~/Supplier?page=@p&searchValue=@ViewBag.SearchValue"> @p </a></li>
                    }
                }
                </ul>
            </nav>
        </div>
    </div>
</div>
