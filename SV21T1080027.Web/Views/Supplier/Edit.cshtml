@model Supplier
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label class="form-label">Tên đơn vị cung cấp: </label>
                <input type="text" name="@nameof(Model.SupplierName)" value = "@Model.SupplierName" class=" form-control" />
            </div>

            <div class="form-group">
                <label class="form-label"> Tên liên lạc: </label>
                <input type="text" name="@nameof(Model.ContactName)" value = "@Model.ContactName"class=" form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Tỉnh/Thành</label>
                @Html.DropDownList("Province", SelectListHelper.Provinces(), new { @class  = "form-control"})
            </div>

            <div class="form-group">
                <label class="form-label">Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address" />
            </div>

            <div class="form-group">
                <label class="form-label"> Số điện thoại: </label>
                <input type="text" name="@nameof(Model.Phone)" value="@Model.Phone" class=" form-control" />
            </div>

            <div class="form-group">
                <label class="form-label"> Email: </label>
                <input type="text" name="@nameof(Model.Email)" value="@Model.Email" class=" form-control" />
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
