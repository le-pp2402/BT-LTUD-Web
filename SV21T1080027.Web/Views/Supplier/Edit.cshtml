@{
    ViewBag.Title = "Chỉnh sửa đơn vị cung cấp";
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <div class="form-group">
                <label class="form-label">Tên đơn vị cung cấp: </label>
                <input type="text" placeholder="Công ty Xuất nhập khẩu Thành Hưng" class=" form-control" />
            </div>

            <div class="form-group">
                <label class="form-label"> Tên liên lạc: </label>
                <input type="text" placeholder="Công ty Thành Hưng" class=" form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Tỉnh/Thành</label>
                <select class="form-control">
                    <option value=""> --- Chọn tỉnh thành </option>
                    <option value="" selected> TP Huế </option>
                    <option value=""> Quảng Bình </option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label"> Địa chỉ: </label>
                <input type="text" placeholder="123 Phùng Hưng" class=" form-control" />
            </div>

            <div class="form-group">
                <label class="form-label"> Số điện thoại: </label>
                <input type="text" placeholder="0977555123" class=" form-control" />
            </div>

            <div class="form-group">
                <label class="form-label"> Email: </label>
                <input type="text" placeholder="thanhhung@company.com" class=" form-control" />
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
