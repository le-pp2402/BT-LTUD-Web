@model Employee
@{
    ViewBag.Title = "Xoá nhân viên";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Employee/Delete/@Model.EmployeeID">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p> @Model.FullName </p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p> @Model.BirthDate </p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p>@Model.Address</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p>@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p>@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái:</label>
                <div class="col-sm-10">
                    @if (Model.IsWorking) {
                        <p>Nhân viên đang làm việc</p>
                    } else {
                        <p>Nhân viên đã nghỉ</p>
                    }
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group text-right">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (ViewBag.AllowDelete) {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                            Xoá nhân viên
                        </button>
                    } else
                    {
                        <span style="color:red"> Không được phép xoá nhân viên này </span>
                    }
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>